---
// src/layouts/Layout.astro
import ChatWidget from '../../ChatWidget.tsx';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Encuentra tu propiedad ideal en Chile' } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Angel & Völkers</title>
  </head>
  <body>
    <nav class="border-b bg-white sticky top-0 z-50 shadow-sm">
      <div class="container mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="text-2xl font-bold bg-gradient-to-r from-purple-600 to-indigo-600 bg-clip-text text-transparent">Angel & Völkers</a>
        <div class="flex gap-6 items-center">
          <a href="/contacto" class="hover:text-purple-600 transition">Contacto</a>
          <a href="/admin" class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition font-semibold">
            Acceso Corredores
          </a>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <ChatWidget client:load />

    <footer class="bg-gray-900 text-white py-12 mt-20">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <h3 class="font-bold text-lg mb-4">Angel & Völkers</h3>
            <p class="text-gray-400">Tu inmobiliaria de confianza en Chile</p>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Enlaces</h4>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/propiedades">Propiedades</a></li>
              <li><a href="/contacto">Contacto</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Contacto</h4>
            <ul class="space-y-2 text-gray-400">
              <li>Email: info@angelvolkers.cl</li>
              <li>Teléfono: +56 9 1234 5678</li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Síguenos</h4>
            <div class="flex gap-4 text-gray-400">
              <a href="#">Facebook</a>
              <a href="#">Instagram</a>
            </div>
          </div>
        </div>
        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
          <p>&copy; 2024 Angel & Völkers. Todos los derechos reservados.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/globals.css';
</style>
