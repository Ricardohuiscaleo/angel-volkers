              'converted': 'bg-purple-100 text-purple-800',
              'lost': 'bg-gray-100 text-gray-800'
            };
            const statusColor = statusColors[lead.status] || 'bg-gray-100 text-gray-800';
            
            const statusLabels: Record<string, string> = {
              'new': 'Nuevo',
              'contacted': 'Contactado',
              'qualified': 'Calificado',
              'converted': 'Convertido',
              'lost': 'Perdido'
            };
            const statusLabel = statusLabels[lead.status] || lead.status;
            
            return `
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 text-sm font-medium text-gray-900">${lead.name}</td>
                <td class="px-6 py-4 text-sm text-gray-600">${lead.email}</td>
                <td class="px-6 py-4 text-sm text-gray-600">${lead.phone || '-'}</td>
                <td class="px-6 py-4">
                  <input 
                    type="number" 
                    value="${lead.score}" 
                    data-lead-id="${lead.id}"
                    data-field="score"
                    class="w-16 px-2 py-1 text-xs font-semibold rounded-full text-center border-0 ${scoreColor} focus:ring-2 focus:ring-blue-500"
                    min="0" 
                    max="100"
                  />
                </td>
                <td class="px-6 py-4">
                  <select 
                    data-lead-id="${lead.id}"
                    data-field="status"
                    class="px-2 py-1 text-xs font-semibold rounded-full border-0 ${statusColor} focus:ring-2 focus:ring-blue-500"
                  >
                    <option value="new" ${lead.status === 'new' ? 'selected' : ''}>Nuevo</option>
                    <option value="contacted" ${lead.status === 'contacted' ? 'selected' : ''}>Contactado</option>
                    <option value="qualified" ${lead.status === 'qualified' ? 'selected' : ''}>Calificado</option>
                    <option value="converted" ${lead.status === 'converted' ? 'selected' : ''}>Convertido</option>
                    <option value="lost" ${lead.status === 'lost' ? 'selected' : ''}>Perdido</option>
                  </select>
                </td>
                <td class="px-6 py-4 text-sm text-gray-600">${new Date(lead.createdAt).toLocaleDateString('es-CL')}</td>
                <td class="px-6 py-4">
                  <div class="flex gap-2">
                    ${lead.phone ? `<a href="tel:${lead.phone}" class="p-2 text-green-600 hover:bg-green-50 rounded-lg transition-colors" title="Llamar">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                      </svg>
                    </a>` : ''}
                    <a href="mailto:${lead.email}" class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" title="Email">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                      </svg>
                    </a>
                    ${lead.phone ? `<a href="https://wa.me/${lead.phone.replace(/[^0-9]/g, '')}" target="_blank" class="p-2 text-emerald-600 hover:bg-emerald-50 rounded-lg transition-colors" title="WhatsApp">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                      </svg>
                    </a>` : ''}
                  </div>
                </td>
              </tr>
            `;
          }).join('');
        }
      } catch (error) {
        console.error('Error loading leads:', error);
      }
    }

    loadLeads();

    // Actualizar lead al cambiar score o status
    document.addEventListener('change', async (e) => {
      const target = e.target as HTMLElement;
      if (target.dataset.leadId && target.dataset.field) {
        const leadId = target.dataset.leadId;
        const field = target.dataset.field;
        const value = (target as HTMLInputElement | HTMLSelectElement).value;
        
        try {
          const res = await fetch(`/api/leads`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id: leadId, [field]: field === 'score' ? parseInt(value) : value })
          });
          
          if (res.ok) {
            loadLeads(); // Recargar tabla
          }
        } catch (error) {
          console.error('Error updating lead:', error);
        }
      }
    });

    // Bot√≥n Nuevo Lead
    document.getElementById('addLeadBtn')?.addEventListener('click', () => {
      const name = prompt('Nombre:');
      if (!name) return;
      const email = prompt('Email:');
      if (!email) return;
      const phone = prompt('Tel√©fono (opcional):');
      const message = prompt('Mensaje (opcional):');
      
      fetch('/api/leads', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ name, email, phone, message })
      })
      .then(() => loadLeads())
      .catch(err => console.error('Error creating lead:', err));
    });
  </script>

