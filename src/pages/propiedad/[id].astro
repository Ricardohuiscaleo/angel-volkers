---
import Layout from '../../layouts/Layout.astro';
import { prisma } from '../../lib/db';

export const prerender = false;

const { id } = Astro.params;

let property: any = null;

try {
  property = await prisma.property.findUnique({
    where: { id },
    include: {
      agent: {
        select: { name: true, phone: true, email: true }
      }
    }
  });
} catch (error) {
  console.error('Error loading property:', error);
}

if (!property) {
  return Astro.redirect('/404');
}

const formatPrice = (price: number) => {
  return new Intl.NumberFormat('es-CL', {
    style: 'currency',
    currency: 'CLP',
    minimumFractionDigits: 0
  }).format(price);
};
---

<Layout title={property.title}>
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="container mx-auto px-4 max-w-6xl">
      <nav class="mb-6 text-sm text-gray-600">
        <a href="/" class="hover:text-blue-600">Inicio</a>
        <span class="mx-2">/</span>
        <a href="/propiedades" class="hover:text-blue-600">Propiedades</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900">{property.title}</span>
      </nav>

      <div class="mb-8">
        {property.images && property.images.length > 0 ? (
          <img 
            src={property.images[0]} 
            alt={property.title}
            class="w-full h-96 object-cover rounded-lg shadow-lg"
          />
        ) : (
          <img 
            src="https://via.placeholder.com/1200x600?text=Sin+Imagen" 
            alt={property.title}
            class="w-full h-96 object-cover rounded-lg shadow-lg"
          />
        )}
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2 space-y-6">
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">{property.title}</h1>
            <p class="text-4xl font-bold text-blue-600 mb-4">{formatPrice(property.price)}</p>
            <p class="text-gray-600">{property.address}, {property.city}</p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Características</h2>
            <div class="grid grid-cols-3 gap-4">
              <div class="text-center">
                <p class="text-2xl font-bold text-gray-900">{property.bedrooms || 0}</p>
                <p class="text-sm text-gray-600">Habitaciones</p>
              </div>
              <div class="text-center">
                <p class="text-2xl font-bold text-gray-900">{property.bathrooms || 0}</p>
                <p class="text-sm text-gray-600">Baños</p>
              </div>
              <div class="text-center">
                <p class="text-2xl font-bold text-gray-900">{property.area}</p>
                <p class="text-sm text-gray-600">m²</p>
              </div>
            </div>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Descripción</h2>
            <p class="text-gray-700 leading-relaxed">{property.description}</p>
          </div>
        </div>

        <div class="lg:col-span-1">
          <div class="bg-white p-6 rounded-lg shadow-md sticky top-4">
            <h3 class="text-xl font-bold text-gray-900 mb-4">¿Le interesa esta propiedad?</h3>
            <form id="contactForm" class="space-y-4">
              <input type="hidden" name="propertyId" value={property.id} />
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Nombre</label>
                <input type="text" name="name" required class="w-full px-3 py-2 border border-gray-300 rounded-lg" />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input type="email" name="email" required class="w-full px-3 py-2 border border-gray-300 rounded-lg" />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Teléfono</label>
                <input type="tel" name="phone" class="w-full px-3 py-2 border border-gray-300 rounded-lg" />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Mensaje</label>
                <textarea name="message" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg"></textarea>
              </div>
              <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700">
                Solicitar Información
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('contactForm')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target as HTMLFormElement;
      const formData = new FormData(form);
      
      const data = {
        name: formData.get('name'),
        email: formData.get('email'),
        phone: formData.get('phone'),
        message: formData.get('message') || 'Interesado en propiedad',
        source: 'website',
        propertyId: formData.get('propertyId')
      };

      try {
        const res = await fetch('/api/leads', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (res.ok) {
          alert('✅ Gracias por su interés. Le contactaremos pronto.');
          form.reset();
        }
      } catch (error) {
        alert('❌ Error al enviar.');
      }
    });
  </script>
</Layout>
