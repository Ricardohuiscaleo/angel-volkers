---
import Layout from '../../layouts/Layout.astro';
import { prisma } from '../../lib/db';

export const prerender = false;

const { id } = Astro.params;

const property = await prisma.property.findUnique({
  where: { id },
  include: {
    agent: {
      select: { name: true, phone: true, email: true }
    }
  }
});

if (!property) {
  return Astro.redirect('/404');
}

const formatPrice = (price: number) => {
  return new Intl.NumberFormat('es-CL', {
    style: 'currency',
    currency: 'CLP',
    minimumFractionDigits: 0
  }).format(price);
};
---

<Layout title={property.title}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
      <!-- Im√°genes -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
        {property.images.map((img: string) => (
          <img src={img} alt={property.title} class="w-full h-96 object-cover rounded-lg" />
        ))}
      </div>

      <!-- Informaci√≥n -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
          <h1 class="text-4xl font-bold mb-4">{property.title}</h1>
          <p class="text-3xl text-blue-600 font-bold mb-4">{formatPrice(property.price)}</p>
          
          <div class="flex gap-6 mb-6">
            {property.bedrooms && property.bedrooms > 0 && (
              <span class="flex items-center gap-2">
                üõèÔ∏è {property.bedrooms} habitaciones
              </span>
            )}
            {property.bathrooms && property.bathrooms > 0 && (
              <span class="flex items-center gap-2">
                üöø {property.bathrooms} ba√±os
              </span>
            )}
            {property.area && property.area > 0 && (
              <span class="flex items-center gap-2">
                üìê {property.area} m¬≤
              </span>
            )}
          </div>

          <div class="mb-6">
            <p class="text-gray-600">üìç {property.address}, {property.city}</p>
            <p class="text-gray-600">üè† {property.type === 'house' ? 'Casa' : property.type === 'apartment' ? 'Departamento' : property.type === 'office' ? 'Oficina' : 'Bodega'}</p>
            <p class="text-gray-600">üíº {property.operation === 'sale' ? 'Venta' : 'Arriendo'}</p>
          </div>

          {property.features && property.features.length > 0 && (
            <div class="mb-6">
              <h2 class="text-2xl font-bold mb-4">Caracter√≠sticas</h2>
              <ul class="grid grid-cols-2 gap-2">
                {property.features.map((feature: string) => (
                  <li class="flex items-center gap-2">‚úì {feature}</li>
                ))}
              </ul>
            </div>
          )}
        </div>

        <!-- Formulario de contacto -->
        <div class="bg-gray-50 p-6 rounded-lg h-fit">
          <h2 class="text-2xl font-bold mb-4">Contactar</h2>
          
          {property.agent && (
            <div class="mb-6">
              <p class="font-semibold">{property.agent.name}</p>
              <p class="text-sm text-gray-600">{property.agent.email}</p>
              <p class="text-sm text-gray-600">{property.agent.phone}</p>
            </div>
          )}

          <form id="contactForm" class="space-y-4">
            <input type="hidden" name="propertyId" value={property.id} />
            <input type="text" name="name" placeholder="Nombre" class="w-full p-3 border rounded" required />
            <input type="email" name="email" placeholder="Email" class="w-full p-3 border rounded" required />
            <input type="tel" name="phone" placeholder="Tel√©fono" class="w-full p-3 border rounded" />
            <textarea name="message" placeholder="Mensaje" rows="4" class="w-full p-3 border rounded"></textarea>
            <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded hover:bg-blue-700">
              Enviar consulta
            </button>
            <div id="formMessage" class="hidden text-sm"></div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <script>
    document.getElementById('contactForm')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target as HTMLFormElement;
      const formData = new FormData(form);
      const btn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      const msg = document.getElementById('formMessage');
      
      btn.disabled = true;
      btn.textContent = 'Enviando...';
      
      try {
        const res = await fetch('/api/leads', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            name: formData.get('name'),
            email: formData.get('email'),
            phone: formData.get('phone'),
            message: formData.get('message'),
            propertyId: formData.get('propertyId')
          })
        });
        
        if (res.ok) {
          msg!.className = 'text-green-600 text-sm';
          msg!.textContent = '¬°Mensaje enviado! Te contactaremos pronto.';
          form.reset();
        } else {
          throw new Error('Error al enviar');
        }
      } catch (error) {
        msg!.className = 'text-red-600 text-sm';
        msg!.textContent = 'Error al enviar. Intenta nuevamente.';
      } finally {
        msg!.classList.remove('hidden');
        btn.disabled = false;
        btn.textContent = 'Enviar consulta';
      }
    });
  </script>
</Layout>
