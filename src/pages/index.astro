      title: 'Casa en Las Condes',
      city: 'Santiago',
      region: 'Metropolitana',
      price: 450000000,
      bedrooms: 4,
      bathrooms: 3,
      area: 250,
      operation: 'sale',
      images: ['https://via.placeholder.com/800x600'],
    },
  ];
}
