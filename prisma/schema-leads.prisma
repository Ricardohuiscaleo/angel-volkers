generator client {
  provider      = "prisma-client-js"
  output        = "../node_modules/.prisma/client-leads"
  binaryTargets = ["native", "linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("LEADS_DATABASE_URL")
}

model Lead {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String?
  message     String?  @db.Text
  source      String
  status      String   @default("new")
  score       Int      @default(0)
  propertyId  String?
  userId      String?
  agentId     String?
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status, createdAt])
  @@index([email])
}
