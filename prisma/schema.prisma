generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  price       Int
  currency    String   @default("CLP")
  type        String
  operation   String
  bedrooms    Int?
  bathrooms   Int?
  area        Int
  address     String
  city        String
  region      String
  country     String   @default("Chile")
  latitude    Float?
  longitude   Float?
  images      String[]
  features    String[]
  status      String   @default("available")
  views       Int      @default(0)
  agentId     String?
  agent       Agent?   @relation(fields: [agentId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  favorites   Favorite[]
  visits      Visit[]

  @@index([city, type, operation, status])
  @@index([price])
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String?
  phone         String?
  chatwootId    String?        @unique
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  favorites     Favorite[]
  savedSearches SavedSearch[]
  visits        Visit[]
  leads         Lead[]
}

model Agent {
  id          String     @id @default(cuid())
  name        String
  email       String     @unique
  phone       String
  avatar      String?
  bio         String?    @db.Text
  chatwootId  String?    @unique
  active      Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  properties  Property[]
  visits      Visit[]
  leads       Lead[]
}

model Lead {
  id              String   @id @default(cuid())
  conversationId  String?  @unique
  name            String
  email           String
  phone           String?
  message         String?  @db.Text
  source          String
  status          String   @default("new")
  score           Int      @default(0)
  propertyId      String?
  userId          String?
  user            User?    @relation(fields: [userId], references: [id])
  agentId         String?
  agent           Agent?   @relation(fields: [agentId], references: [id])
  metadata        Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([status, createdAt])
  @@index([conversationId])
}

model Visit {
  id          String   @id @default(cuid())
  propertyId  String
  property    Property @relation(fields: [propertyId], references: [id])
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  agentId     String?
  agent       Agent?   @relation(fields: [agentId], references: [id])
  scheduledAt DateTime
  status      String   @default("pending")
  notes       String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([scheduledAt, status])
}

model Favorite {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id])
  createdAt  DateTime @default(now())

  @@unique([userId, propertyId])
}

model SavedSearch {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  name      String
  filters   Json
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  type      String
  title     String
  message   String   @db.Text
  data      Json?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}
